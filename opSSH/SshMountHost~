#!/bin/bash
#We will use sshfs to mount pandafs to mountpoint
cd "$(dirname "$0")"

source HostInclude

MOUNT_POINT=./${HOST_NAME}_mount
HOST_USER=${SSH_USER}
HOST_IP=${SSH_HOST}
SSHMOUNT_SCR=${UTILITY_DIR}/SshfsMount
HOST_POINT=~

mkdir MOUNT_POINT

${SSHMOUNT_SCR} ${HOST_USER} ${HOST_IP} ${SSH_PORT} ${MOUNT_POINT} ${HOST_POINT}
cd -
